<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xhj.zime.com.mysensordemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GetAllSensorActivity"
            android:label="获取手机上所有的传感器信息"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LightSensorActivity"
            android:label="光照传感器"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AccelerometerActivity"
            android:label="加速度传感器"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".OrientationActivity"
            android:label="方向传感器"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>